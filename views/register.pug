extends index

block content
    div(class="flex justify-center p-1 bg-gray-300")
        div(class="flex flex-col bg-white w-96 p-12 text-left border border-gray-300 rounded-lg")
            div(class="flex justify-center")
                h1(class="text-2xl font-semibold") Sign up
            form(action="/api/user/signup" method="post")
                div(class="flex flex-col")
                    div(class="flex justify-between items-end pt-6")
                        label(for="username") Username
                    div
                        input(required minlength="3" name="username" type="text" class="w-full rounded text-sm font-medium text-gray-900 p-3 border border-gray-200 focus:outline-solid focus:outline-cyan-500 focus:outline-offset-1")
                div(class="flex flex-col")
                    div(class="flex justify-between items-end pt-6")
                        label(for="email") Email
                    div
                        input(required pattern="^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" name="email" type="text" class="w-full rounded text-sm font-medium text-gray-900 p-3 border border-gray-200 focus:outline-solid focus:outline-cyan-500 focus:outline-offset-1")
                div 
                    div(class="flex justify-between items-end pt-6")
                        label(for="password") Password
                    div 
                        input(required minlength="8" maxlength="64" pattern="^(?=.*[0-9])((?=.*[a-z])|(?=.*[A-Z])).*$" name="password" type="password" class="w-full rounded text-sm font-medium text-gray-900 p-3 border border-gray-200 focus:outline-solid focus:outline-cyan-500 focus:outline-offset-1")
                        span(class="text-xs font-medium text-gray-400") Must be 8 characters or more, needs at least one number and one letter
                div 
                    button(type="submit" class="mt-10 px-3 py-4 w-full text-sm text-white rounded-full bg-blue-500 hover:bg-blue-600")
                        span Sign up
                div(class="mt-2 text-center")
                    span Have an account?
                        a(href="/login" class="ml-2 text-blue-500 hover:text-blue-600") Sign in
